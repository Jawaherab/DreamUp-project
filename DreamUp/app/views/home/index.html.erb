

<div class="container-fluid">
  <h1> DREAM UP </h1>
  <p>The best place to make dreams come true</p>

  <button type="button" class="btn btn-light"><%= link_to 'Lets Dream' , dreams_path %></button>

</div>

<% @dreams.each do |dream| %>
    <div class="card" style="max-width: 20rem;float:left">

        <div class="card-body">
            <div class="card-img">
            <% if dream.avatar.attached?%>
            <img style="width:100%;" src="<%=(url_for(dream.avatar)) %>" >
             <% end %>
            </div>
            <br>
            <h4 class="card-title"><%= dream.user.user_name%></h4>
            <p class="card-text"><%= dream.post %></p>
            <%= link_to "see more", dream %>
        </div>
    </div>

</div>
<% end %>
<div style="clear:both"></div>

<div class="qoute">  When one dreams alone, it remains a dream. But if we all dream together, it becomes reality
</div>













